<UserControl x:Class="LevelingUpWithTrivia.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:StatisticsViewModel}">
    <Grid Background="Chocolate">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Personal Statistics" Height="40" FontSize="16" Margin="0,0,0,10"
                    Background="Tan" Foreground="Black" Command="{Binding NavToUserStatisticsCommand}"/>
            <Button Content="High Scores" Height="40" FontSize="16" Margin="0,0,0,10"
                    Background="Tan" Foreground="Black" Command="{Binding NavToHighScoresCommand}"/>
            <Button Content="BACK" Height="40" FontSize="16"
                    Background="Red" Foreground="Black" Command="{Binding NavToMainCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>