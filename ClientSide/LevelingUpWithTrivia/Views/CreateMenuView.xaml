<UserControl x:Class="LevelingUpWithTrivia.Views.CreateMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views" xmlns:vm="clr-namespace:LevelingUpWithTrivia.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#001123">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Create Room" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Room Name:" Foreground="White"/>
            <TextBox Text="{Binding RoomName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="6"/>

            <TextBlock Text="Max Players:" Foreground="White"/>
            <TextBox Text="{Binding MaxPlayers, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="6"/>

            <TextBlock Text="Question Count:" Foreground="White"/>
            <TextBox Text="{Binding QuestionCount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="6"/>

            <TextBlock Text="Time Per Question (sec):" Foreground="White"/>
            <TextBox Text="{Binding TimePerQuestion, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Padding="6"/>

            <Button Content="Create Room"
                    Command="{Binding CreateRoomCommand}"
                    Background="#00727C" Foreground="White" Padding="10" FontSize="16" Margin="0,0,0,10"/>

            <Button Content="Back"
                    Command="{Binding BackCommand}"
                    Background="#555" Foreground="White" Padding="10" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
