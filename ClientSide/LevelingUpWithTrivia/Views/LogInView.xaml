<UserControl x:Class="LevelingUpWithTrivia.Views.LogInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:LogInViewModel}">
        <Grid Background="#004250">
            <Border Background="#00727C" Padding="40" CornerRadius="20" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <Grid  Margin="0, 0, 0, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Login page" FontSize="28" Foreground="White" FontWeight="Bold" TextAlignment="Center"/>
                    <Image Grid.Column="1" Source="/Assets/TriviaLogo.png" Height="50" Width="50"/>
                    </Grid>
                    
                    <!-- Username -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0, 0, 0, 3">
                        <TextBlock Text="Username:" Width="80" VerticalAlignment="Center" Foreground="White" />
                        <TextBox Height="30" Width="250" Background="#CCC" FontSize="14"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Password:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                        <PasswordBox Height="30" Width="250" Background="#CCC"
                         PasswordChanged="PasswordBox_PasswordChanged" />
                    </StackPanel>

                    <!-- else -->
                <Button Height="40" FontSize="16" Padding="0" Margin="0,10,0,10" ToolTip="Click to log into your account"
                        Background="#004250" Foreground="White" Cursor="Hand" Command="{Binding LogInCommand}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Log In" VerticalAlignment="Center"/>
                        <Image Source="/Assets/loginLogo.png" Width="30" Height="30" Margin="40,0,0,0"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Don't have an account?" Foreground="White" HorizontalAlignment="Center" Margin="0,15,0,4"/>
                    
                <Button  BorderBrush="#1a7569" Height="35" FontSize="16" Padding="0" Margin="0,0,0,0"
                    Background="#006671" Foreground="White" Cursor="Hand" Command="{Binding NavToSignupCommand}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Sign Up" VerticalAlignment="Center"/>
                        <Image Source="/Assets/signUpLogo.png" Width="30" Height="30" Margin="30,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
                
            </Border>
        </Grid>
</UserControl>
