<UserControl x:Class="LevelingUpWithTrivia.Views.WaitingForOthersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:WaitingForOthersViewModel}">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Waiting for other players to finish..." 
                       FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="250" Height="20" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>