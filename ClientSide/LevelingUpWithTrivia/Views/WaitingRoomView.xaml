<UserControl x:Class="LevelingUpWithTrivia.Views.WaitingRoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:WaitingRoomViewModel}"
             >
    
    <Grid Background="#001123">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="{Binding RoomName}" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="{Binding RoomObj.Id}" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Players in Room:" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
            <ItemsControl ItemsSource="{Binding Players}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="White" FontSize="14" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Center">
                <Button Content="Back to Menu" Command="{Binding PerformLeaveRoomCommand}" Margin="0,0,10,0"
                        Background="#444" Foreground="White" Padding="10,5"/>
                <Button Content="Start Game" Command="{Binding StartGameCommand}" 
                        Background="#00727C" Foreground="White" Padding="10,5" 
                        Visibility="{Binding IsHost, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
