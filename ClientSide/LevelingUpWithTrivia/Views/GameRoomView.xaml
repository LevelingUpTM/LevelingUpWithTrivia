<UserControl x:Class="LevelingUpWithTrivia.Views.GameRoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#001123" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Panel -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Questions -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Questions Left: " Foreground="White" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding QuestionsLeft}" Foreground="White" FontSize="14" Margin="5,0"/>
            </StackPanel>

            <!-- Time Left -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Time Left: " Foreground="White" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding TimeLeft}" Foreground="#1a7569" FontSize="14" Margin="5,0"/>
            </StackPanel>

            <!-- Correct Answers -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Correct Answers: " Foreground="White" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding CorrectAnswers}" Foreground="#00727C" FontSize="14" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- The question -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <TextBlock Text="{Binding CurrentQuestion}" Margin="0, 0, 0, 25"
                       FontSize="24" FontWeight="Bold" Foreground="White" TextAlignment="Center" TextWrapping="Wrap"/>

            <!-- Answers -->
            <!-- Answers -->
            <Button Content="{Binding Answer1}" Height="40" FontSize="16" Margin="0, 0, 0, 10"
        Background="#004250" Foreground="White" Command="{Binding SelectAnswerCommand}" CommandParameter="0"/>
            <Button Content="{Binding Answer2}" Height="40" FontSize="16" Margin="0, 0, 0, 10"
        Background="#004250" Foreground="White" Command="{Binding SelectAnswerCommand}" CommandParameter="1"/>
            <Button Content="{Binding Answer3}" Height="40" FontSize="16" Margin="0, 0, 0, 10"
        Background="#004250" Foreground="White" Command="{Binding SelectAnswerCommand}" CommandParameter="2"/>
            <Button Content="{Binding Answer4}" Height="40" FontSize="16" Margin="0, 0, 0, 10"
        Background="#004250" Foreground="White" Command="{Binding SelectAnswerCommand}" CommandParameter="3"/>

        </StackPanel>

        <!-- Leave Room -->
        <Button Grid.Row="2" Content="Leave Room" HorizontalAlignment="Right" Margin="0,20,10,10"
                Background="#770000" Foreground="White" Padding="10,5" Command="{Binding LeaveRoomCommand}"/>
    </Grid>

</UserControl>
