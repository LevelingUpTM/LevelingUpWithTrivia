<UserControl x:Class="LevelingUpWithTrivia.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             xmlns:vm="clr-namespace:LevelingUpWithTrivia.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:SignUpViewModel}">

    <UserControl.DataContext>
        <vm:SignUpViewModel />
    </UserControl.DataContext>

    <Grid Background="#004250">
        <Border Background="#00727C" Padding="40" CornerRadius="20" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Sign Up" FontSize="28" Foreground="White" FontWeight="Bold" TextAlignment="Center" Margin="0, 0, 0, 10"/>

              
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Username:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox Height="30" Width="220" Background="#CCC" FontSize="14"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

            
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Email:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox Height="30" Width="220" Background="#CCC" FontSize="14"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

               
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Password:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <PasswordBox Height="30" Width="220" Background="#CCC"
                       PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>

               
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Confirm Password:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <PasswordBox Height="30" Width="220" Background="#CCC"
             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                </StackPanel>

                
                <Button Content="Create Account"
                        Background="#005a66"
                        Foreground="White"
                        Height="40"
                        FontSize="16"
                        Cursor="Hand"
                        Margin="0, 10, 0, 0"
                        Command="{Binding SignUpCommand}"
                        BorderBrush="#1a7569"/>

                <TextBlock Text="Already have an account?" Foreground="White" HorizontalAlignment="Center" Margin="0,15,0,4"/>
                <Button Content="Back to Login" Background="#006671" Foreground="White" Height="35" Cursor="Hand" BorderBrush="#1a7569" Command="{Binding NavToLoginCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
