<UserControl x:Class="LevelingUpWithTrivia.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             xmlns:vm="clr-namespace:LevelingUpWithTrivia.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:SignUpViewModel}">

    <UserControl.DataContext>
        <vm:SignUpViewModel />
    </UserControl.DataContext>

    <Grid Background="#004250">
        <Border Background="#00727C" Padding="40" CornerRadius="20" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Grid  Margin="0, 0, 0, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Signup page" FontSize="28" Foreground="White" FontWeight="Bold" TextAlignment="Center"/>
                    <Image Grid.Column="1" Source="/Assets/TriviaLogo.png" Height="50" Width="50"/>
                </Grid>


                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 3">
                    <TextBlock Text="Username:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox Height="30" Width="220" Background="#CCC" FontSize="14"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 3">
                    <TextBlock Text="Email:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox Height="30" Width="220" Background="#CCC" FontSize="14"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 3">
                    <TextBlock Text="Password:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <PasswordBox Height="30" Width="220" Background="#CCC"
                       PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 3">
                    <TextBlock Text="Confirm Password:" Width="120" VerticalAlignment="Center" Foreground="White"/>
                    <PasswordBox Height="30" Width="220" Background="#CCC"
             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                </StackPanel>




                <Button BorderBrush="#1a7569" Height="40" FontSize="16" Padding="0" Margin="0,10,0,0" ToolTip="Click to creat into your account"
        Background="#004250" Foreground="White" Cursor="Hand" Command="{Binding SignUpCommand}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Create Account" VerticalAlignment="Center"/>
                        <Image Source="/Assets/SignupLogo.png" Width="30" Height="30" Margin="40,0,0,0"/>
                    </StackPanel>
                </Button>

                
                <TextBlock Text="Already have an account?" Foreground="White" HorizontalAlignment="Center" Margin="0,15,0,4"/>
                <Button BorderBrush="#1a7569" Height="35" FontSize="16" Padding="0" Margin="0,0,0,0"
                        Background="#006671" Foreground="White" Cursor="Hand" Command="{Binding NavToLoginCommand}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Back to Login" VerticalAlignment="Center"/>
                        <Image Source="/Assets/LoginLogo.png" Width="30" Height="30" Margin="30,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
