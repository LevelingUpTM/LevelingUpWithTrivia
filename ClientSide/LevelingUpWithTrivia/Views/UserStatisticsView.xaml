<UserControl x:Class="LevelingUpWithTrivia.Views.UserStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:UserStatisticsViewModel}">
    <StackPanel Margin="20">
        <Button Content="Back to Main Menu" Command="{Binding NavToMainCommand}" Margin="0,0,0,10"/>
        <Button Content="Load My Stats" Command="{Binding LoadPersonalStatsCommand}" Margin="0,0,0,10"/>
        <ListBox ItemsSource="{Binding Statistics}" Height="300"/>
    </StackPanel>
</UserControl>