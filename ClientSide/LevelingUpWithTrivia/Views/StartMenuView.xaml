<UserControl x:Class="LevelingUpWithTrivia.Views.StartMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d"
             xmlns:viewmodels="clr-namespace:LevelingUpWithTrivia.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:StartMenuViewModel}">

    <Grid Background="#001123">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >

            <Button Height="40" FontSize="16" Padding="0" Margin="0,0,0,10"
                Background="#004250" Foreground="White" Cursor="Hand" Command="{Binding NavToLoginCommand}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Log In" VerticalAlignment="Center"/>
                    <Image Source="/Assets/loginLogo.png" Width="30" Height="30" Margin="40,0,0,0"/>
                </StackPanel>
            </Button>



            <Button Height="40" FontSize="16" Padding="0" Margin="0,0,0,0"
                Background="#00727C" Foreground="White" Cursor="Hand" Command="{Binding NavToSignupCommand}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Sign Up" VerticalAlignment="Center"/>
                    <Image Source="/Assets/signUpLogo.png" Width="30" Height="30" Margin="30,0,0,0"/>
                    
                </StackPanel>
            </Button>


        </StackPanel>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Leveling Up with Trivia" 
                   Foreground="White" FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>

            <Image Source="/Assets/TriviaLogo.png" Width="250" Height="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
    
</UserControl>
