<UserControl x:Class="LevelingUpWithTrivia.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >

    <Grid Background="#001123">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >
            <TextBlock Text="Welcome: 'UserName'"
                       Foreground="White" FontSize="24" FontWeight="Bold"/>

            <Button Content="Join Room" Height="40" FontSize="16" Padding="0" Margin="0,0,0,0"
                    Background="#004250" Foreground="White" Cursor="Hand"/>

            <Button Content="Create Room" Height="40" FontSize="16" Padding="10"
                    Background="#00727C" Foreground="White" Cursor="Hand"/>

            <Grid  HorizontalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Stats" Width="100" Height="35" Background="#005a66" Foreground="White" Cursor="Hand"/>
                <Button Grid.Column="1" Content="Info" Width="100" Height="35" Background="#004250" Foreground="White" Cursor="Hand"/>
            </Grid>
        </StackPanel>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Leveling Up with Trivia" 
                       Foreground="White" FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>

            <Image Source="/Assets/TriviaLogo.png" Width="250" Height="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
