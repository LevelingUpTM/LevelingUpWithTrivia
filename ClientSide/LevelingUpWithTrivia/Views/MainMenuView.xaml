<UserControl x:Class="LevelingUpWithTrivia.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelingUpWithTrivia.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >

    <Grid Background="#001123">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Command="{Binding NavToUserStatsCommand}">
                    <TextBlock Text="Welcome: UserName" TextWrapping="Wrap"
                           Foreground="White" FontSize="24" FontWeight="Bold"/>
                </Button>
                
                <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Command="{Binding NavToStartCommand}">
                    <Image Source="/Assets/LogOutLogo.png" Width="50" Height="70" RenderTransformOrigin="0.5,0.622" ></Image>
                </Button>
            </Grid>
            

            <Button Content="Join Room" Height="40" FontSize="16" Padding="0" Margin="0,10,0,10"
                    Background="#004250" Foreground="White" Command="{Binding NavToJoinCommand}"/>

            <Button Content="Create Room" Height="40" FontSize="16" Padding="0" Margin="0, 0, 0, 10"
                    Background="#00727C" Foreground="White" Command="{Binding NavToCreateCommand}"/>

            <Grid  HorizontalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Stats" Height="35" Background="#005a66" Foreground="White" Margin="0, 0, 2, 0" Command="{Binding NavToStatsCommand}"/>
                <Button Grid.Column="1" Content="Info" Height="35" Background="#004250" Foreground="White" Margin="2, 0, 0, 0" Command="{Binding NavToInfoCommand}"/>
            </Grid>
        </StackPanel>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Leveling Up with Trivia" 
                       Foreground="White" FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>

            <Image Source="/Assets/TriviaLogo.png" Width="250" Height="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
